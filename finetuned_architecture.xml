<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 520">
  <!-- Background -->
  <rect width="800" height="520" fill="#f8f9fa" rx="5" ry="5"/>
  
  <!-- Original XLM-RoBERTa Model -->
  <rect x="100" y="70" width="600" height="250" fill="#e6f3ff" stroke="#2070b0" stroke-width="2" rx="10" ry="10"/>
  <text x="400" y="100" font-family="Arial" font-size="22" font-weight="bold" text-anchor="middle">XLM-RoBERTa Base Model</text>
  <text x="400" y="125" font-family="Arial" font-size="16" text-anchor="middle">(~270 million parameters)</text>
  
  <!-- Input Embeddings -->
  <rect x="130" y="150" width="540" height="40" fill="#c2e0ff" stroke="#2070b0" stroke-width="1.5" rx="5" ry="5"/>
  <text x="400" y="175" font-family="Arial" font-size="16" text-anchor="middle">Input Embeddings</text>
  
  <!-- Transformer Layers -->
  <rect x="130" y="200" width="540" height="100" fill="#c2e0ff" stroke="#2070b0" stroke-width="1.5" rx="5" ry="5"/>
  <text x="400" y="250" font-family="Arial" font-size="16" text-anchor="middle">12 Transformer Encoder Layers</text>
  
  <!-- Added NER Classification Head -->
  <rect x="300" y="330" width="200" height="60" fill="#ffcccc" stroke="#cc0000" stroke-width="2" rx="8" ry="8"/>
  <text x="400" y="365" font-family="Arial" font-size="16" font-weight="bold" text-anchor="middle">NER Classification Head</text>
  <text x="400" y="385" font-family="Arial" font-size="14" text-anchor="middle">(~3,076 new parameters)</text>
  
  <!-- Connection -->
  <path d="M400 300 L400 330" stroke="#333" stroke-width="3" fill="none" marker-end="url(#arrow)"/>
  
  <!-- Output -->
  <rect x="300" y="410" width="200" height="40" fill="#e6ffe6" stroke="#008800" stroke-width="1.5" rx="5" ry="5"/>
  <text x="400" y="435" font-family="Arial" font-size="16" text-anchor="middle">NER Tag Predictions</text>
  
  <!-- Connection to output -->
  <path d="M400 390 L400 410" stroke="#333" stroke-width="2" fill="none" marker-end="url(#arrow)"/>
  
  <!-- Arrow marker definition -->
  <defs>
    <marker id="arrow" markerWidth="10" markerHeight="10" refX="9" refY="3" orient="auto" markerUnits="strokeWidth">
      <path d="M0,0 L0,6 L9,3 z" fill="#333"/>
    </marker>
  </defs>
  
  <!-- Added during fine-tuning label -->
  <text x="530" y="364" font-family="Arial" font-size="16" font-style="italic" text-anchor="start" fill="#cc0000">Added during fine-tuning</text>
  <path d="M515 360 L470 360" stroke="#cc0000" stroke-width="1.5" fill="none" marker-start="url(#arrow)" stroke-dasharray="5,3"/>
  
  <!-- Title moved to bottom -->
  <text x="400" y="490" font-family="Arial" font-size="16" font-style="italic" text-anchor="middle">Figure 2. Fine-tuning architecture with added classification head</text>
</svg>